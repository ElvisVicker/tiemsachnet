@model tiemsach.Data.Chitietphieunhap

@{
    ViewData["Title"] = "Edit";

    var books = ViewData["SachList"] as List<SelectListItem>;
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Thông tin phiếu nhập</h4>

            <form asp-action="EditCTPN" class="forms-sample">
                <div class="form-group">
                    <label asp-for="SachId">Sách</label>
                    <select asp-for="SachId" class="form-control form-control-sm">
                        @foreach (var item in books)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Gianhap">Giá nhập</label>
                    <input asp-for="Gianhap" type="number" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Soluong">Số lượng</label>
                    <input asp-for="Soluong" type="number" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Tinhtrang">Tình trạng</label>
                    <select asp-for="Tinhtrang" class="form-control form-control-sm">
                        <option value="false">Chưa duyệt</option>
                        <option value="true">Đã duyệt</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary me-2">Sửa</button>
                <button asp-action="Edit" asp-route-id="@Model.PhieunhapId" class="btn btn-light">Hủy</button>
            </form>
        </div>
    </div>
</div>
