@model tiemsach.Data.Nxb

@{
    ViewData["Title"] = "Xóa nhà xuất bản";
}

<h1>XÓA</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Nhà xuất bản</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ten)
        </dd>
        <dt class = "col-sm-2">
            Địa chỉ:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Diachi)
        </dd>
        <dt class = "col-sm-2">
            Tình trạng:
        </dt>
        <dd class = "col-sm-10">
            Đang hợp tác
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="XÓA" class="btn btn-danger" /> |
        <a asp-action="Index">Quay về danh sách</a>
    </form>
</div>
