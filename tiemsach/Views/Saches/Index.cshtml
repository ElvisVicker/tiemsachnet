@model IEnumerable<tiemsach.Data.Sach>

@{
    ViewData["Title"] = "Danh sách sách:;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Danh sách sản phẩm</h2>
            <a asp-action="Create" class="btn btn-inverse-primary btn-fw">Tạo sách mới</a>
            <div class="table-responsive pt-3">

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Tên
                            </th>
                            <th>
                                Hình ảnh
                            </th>
                            <th>
                                Loại sách
                            </th>
                            <th>
                                Tác giả
                            </th>
                            <th>
                                Giá nhập
                            </th>
                            <th>
                                Giá xuất
                            </th>
                            <th>
                                Số lượng
                            </th>
                            <th>
                                Tình trạng
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ten)
                                </td>
                                <td>
                                    <img src="~/Customer/images/@item.Image" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Loaisach.Ten)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tacgia.Ten)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Gianhap)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Giaxuat)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Soluong)
                                </td>
                                <td>
                                    Đang bán
                                </td>

                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Chỉnh sửa</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
