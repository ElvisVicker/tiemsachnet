@model tiemsach.Data.Sach

@{
    ViewData["Title"] = "Chỉnh sửa sách";
}

<h1>Chỉnh sửa</h1>

<h4>Sách</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Ten" class="control-label">Tên sách:</label>
                <input asp-for="Ten" class="form-control" />
                <span asp-validation-for="Ten" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Hình ảnh:</label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TacgiaId" class="control-label">Tác giả:</label>
                <select asp-for="TacgiaId" class="form-control" asp-items="ViewBag.TacgiaId"></select>
                <span asp-validation-for="TacgiaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoaisachId" class="control-label">Loại sách</label>
                <select asp-for="LoaisachId" class="form-control" asp-items="ViewBag.LoaisachId"></select>
                <span asp-validation-for="LoaisachId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mota" class="control-label">Mô tả:</label>
                <input asp-for="Mota" class="form-control" />
                <span asp-validation-for="Mota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay về danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
