@model tiemsach.Data.Loaisach

@{
    ViewData["Title"] = "Xóa loại sách";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Xác nhận xóa loại sách</h4>
            <p>Bạn có chắc chắn muốn xóa loại sách này?</p>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Tên loại sách
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Ten)
                </dd>
                <dt class="col-sm-2">
                    Tình trạng
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Tinhtrang)
                </dd>
                <dt class="col-sm-2">
                    Ngày tạo
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreatedAt)
                </dd>
                <dt class="col-sm-2">
                    Ngày cập nhật
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UpdatedAt)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-light">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>
