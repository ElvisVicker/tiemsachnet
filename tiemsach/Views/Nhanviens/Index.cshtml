@model IEnumerable<tiemsach.ViewModels.NhanVien_ViewModel>

@{
    ViewData["Title"] = "Employee List";
    <!-- Include CSS -->
    <link rel="stylesheet" href="../../vendors/ti-icons/css/themify-icons.css" />
    <link rel="stylesheet" href="../../vendors/base/vendor.bundle.base.css" />
    <link rel="stylesheet" href="../../css/style.css" />
}

<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <!-- Title Panel -->
            <div class="card mb-4">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">Employee List</h4>
                    <a asp-controller="Home" asp-action="Dashboard" class="btn btn-outline-secondary">
                        <i class="ti-home"></i> Go to Dashboard
                    </a>
                </div>
            </div>

            <!-- Search Form -->
            <div class="card mb-4">
                <div class="card-body">
                    <form asp-action="Search" method="get" class="form-inline">
                        <div class="input-group">
                            <input type="text" name="key" class="form-control" placeholder="Search employees..." />
                            <button type="submit" class="btn btn-primary">
                                <i class="ti-search"></i> Search
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Create Button -->
            <div class="text-center mb-4">
                <a asp-action="Create" class="btn btn-success">
                    <i class="ti-plus"></i> Create New Employee
                </a>
            </div>

            <!-- Employee List -->
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Employee Details</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Gender</th>
                                    <th>Role</th>
                                    <th>Created At</th>
                                    <th>Last Updated</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    int counter = 1;
                                    foreach (var employee in Model)
                                    {
                                        <tr>
                                            <td>@counter</td>
                                            <td>@employee.hoten</td>
                                            <td>@employee.email</td>
                                            <td>@(employee.gioitinh ? "Male" : "Female")</td>
                                            <td>@employee.vitri</td>
                                            <td>@employee.created_at</td>
                                            <td>@employee.updated_at</td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@employee.id" class="btn btn-warning btn-sm">
                                                    <i class="ti-pencil"></i> Edit
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@employee.id" class="btn btn-danger btn-sm">
                                                    <i class="ti-trash"></i> Delete
                                                </a>
                                            </td>
                                        </tr>
                                        counter++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8" class="text-center">No employees found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="footer">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
                <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">© 2023 Company Name</span>
            </div>
        </footer>
    </div>
</div>

@section Scripts {
    <!-- Include JavaScript -->
    <script src="../../vendors/base/vendor.bundle.base.js"></script>
    <script src="../../js/off-canvas.js"></script>
    <script src="../../js/hoverable-collapse.js"></script>
    <script src="../../js/template.js"></script>
}
